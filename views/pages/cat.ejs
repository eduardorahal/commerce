<%- contentFor('body') %>
<div class="jumbotron" style="background-color: transparent; color: indigo; margin-top: -40px; ">
    <h6><a href="/">Home</a>&nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;&nbsp;<%= cat[0].name; %></h6>
    <br>
    <div class="jumbotron-fluid" style="color: indigo">
        <h1 class="display-3"><%= cat[0].name; %></h1>
        <p class="lead" style="background-color: rgb(250, 242, 242);"><%= cat[0].page_description; %></p>
    </div>
    <br>
    <% var categories = cat[0].categories; %>
    <% for(var i=0; i<categories.length; i++) { %>  
        <h3><%= categories[i].name %></h3>
        <a href="/<%= cat[0].id; %>/<%=categories[i].id%>">
            <div style="background-color: white">
                <img src="public/categories/<%= categories[i].id %>.jpg" style="width:100%;">
            </div>
        </a>
        <div class="container" style="text-align: right"><%= categories[i].page_title %></div>
        <br>
    <% } %>
</div>