
<%- contentFor('body') %>
<div class="jumbotron" style="background-color: transparent; color: indigo; margin-top: -40px; ">
    <h6>
        <a href="/">Home</a>
        &nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;&nbsp;
        <a href="/<%= cat[0].id %>"><%= cat[0].name; %></a>
        &nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;&nbsp;
        <a href="/<%= cat[0].id %>/<%= sub[0].categories.id %>"><%= sub[0].categories.name; %></a>
        &nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;&nbsp;
        <a href="/<%= cat[0].id %>/<%= sub[0].categories.id %>/<%= sub[0].categories.categories.id %>"><%= sub[0].categories.categories.name; %>
    </h6>
    <br>
    <br>
    <div class="container row" style="justify-content: center; align-items: center">
        <div class="col-md-10" style="height: 500px">
            <h6><%= id[0].name %></h6><br>
            <br>
            <div class="row">
                <div class="col-md-5">
                        <img width="300px" style="opacity: 1; filter: alpha(opacity=100);" src="../../../public/products/<%= sub[0].categories.categories.id %>.jpg">
                </div>
                <div class="col-md-7">
                    <p style="text-align: justify"><%= id[0].long_description %></p>
                    <div class="row container" style="position:absolute; bottom:0; line-height: 40px">
                        <div class="col-md-5">
                            <a href="" style="float:left" class="btn btn-outline-secondary" >Buy Now</a>
                        </div>
                        <div class="col-md-7" id="price">
                            <h7 class="col-md-3" style="float:left; vertical-align:middle; ">Price: </h7>
                            <span class="col-md-3" style="float:left; vertical-align:middle; "><%= id[0].price %></span>
                            <div class="form-group">
                                <select class="form-control col-md-5" style="float:right;" id="currencySelect" onchange="changeCur(this.value);">
                                    <% for (var i=0; i<p.length; i++) { %>
                                        <option value="<%= p[i].Value %>, <%= p[i].IDMoneda %>" <%= id[0].currency == p[i].IDMoneda ? 'selected' : '' %> > <%= p[i].IDMoneda %> </option>                               
                                    <% } %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Function to change value according to currency select -->
<script>
    function changeCur(value){
        var newe = value.split(", ",2);
        id = newe[1];
        value = newe[0];
        if(id == "USD"){
            $('#price span').html("<%= id[0].price %>");
        }
        else {
            $('#price span').html(("<%= ref %>" / value).toFixed(2));
        }
    }
</script>