
<%- contentFor('body') %>
<div class="jumbotron" style="background-color: transparent; color: indigo; margin-top: -40px; ">
    <h6>
        <a href="/">Home</a>
        &nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;&nbsp;
        <a href="/<%= cat[0].id %>"><%= cat[0].name; %></a>
        &nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;&nbsp;
        <a href="/<%= cat[0].id %>/<%= sub[0].categories.id %>"><%= sub[0].categories.name; %></a>
        &nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;&nbsp;<%= sub[0].categories.categories.name; %>
    </h6>
    <br>
    <div class="jumbotron-fluid" style="color: indigo">
        <h1 class="display-3"><%= sub[0].categories.categories.name; %></h1>
        <p class="lead" style="background-color: rgb(250, 242, 242)"><%= sub[0].categories.categories.page_description; %></p>
    </div>
    <br>
    <div class="container row">
        <% for(var i=0; i<end.length; i++) { %>  
            <div class="col-md-6" style="height: 275px">
                <h6><%= end[i].name %></h6><br>
                <div class="row">
                    <div class="col-md-4">
                        <a href="/<%= cat[0].id %>/<%= sub[0].categories.id %>/<%= sub[0].categories.categories.id %>/<%= end[i].id %>">
                            <img width="150px" src="../../../public/products/<%= sub[0].categories.categories.id %>.jpg">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <p><%= end[i].page_description %></p>
                        <div class="row container" style="position:absolute; bottom:0;">
                            <div class="col-md-6">
                                <p class="text-left" >Price: <%= end[i].price %>&nbsp;<%= end[i].currency %></p>
                            </div>
                            <div class="col-md-6">
                                <a href="/<%= cat[0].id %>/<%= sub[0].categories.id %>/<%= sub[0].categories.categories.id %>/<%= end[i].id %>" style="float:right" class="btn btn-outline-secondary" >More Info</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
